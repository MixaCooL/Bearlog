@using Bearlog.Web.Models
@using Bearlog.Web.Services
@model Bearlog.Web.Models.LoginModel

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen">
    <!-- SweetAlert -->
    <script src="~/Content/SweetAlert/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="~/Content/SweetAlert/sweetalert2.min.css">

    <title>@ViewBag.Title</title>
</head>

<body>
  

<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="../Home/Index">Bearlog</a>          
        </div>

        

        @if (User.Identity.IsAuthenticated)
        {
            <div class="navbar-form navbar-right">
                <div class="form-group">
                    Добро пожаловать, @(((BearlogPrincipal)User).UserName)!
                </div>
                <div class="btn btn-danger">@Html.RouteLink("Выход", new { action = "Logout", controller = "Account" })</div>
            </div>
        }
        else
        {

            using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="navbar-form navbar-right">
                    <div class="form-group">
                        <label for="inputLogin" class="col-lg-1 control-label">Логин</label>
                        <div class="col-lg-2">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword" class="col-lg-1 control-label">Пароль</label>
                        <div class="col-lg-2">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-1 col-lg-offset-1">
                            <button type="submit" class="btn btn-success btn-block">Войти</button>
                        </div>

                        <div class="col-lg-1">
                            <a href="/Account/Register" class="btn btn-link btn-block">Зарегистрироваться</a>
                        </div>
                    </div>
                </div>
            }
        }

                
</nav>  

@RenderBody()
</body>
</html>