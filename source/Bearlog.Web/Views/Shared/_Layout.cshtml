@using Bearlog.Web.Models
@using Bearlog.Web.Services

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen">
    <!-- SweetAlert -->
    <script src="~/Content/SweetAlert/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="~/Content/SweetAlert/sweetalert2.min.css">

    <title>@ViewBag.Title</title>
</head>

<body>
  

<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="../Home/Index">Bearlog</a>          
        </div>

        

        @if (User.Identity.IsAuthenticated)
        {
            <div class="navbar-form navbar-right">
                <div class="form-group">
                    Добро пожаловать, @(((BearlogPrincipal)User).UserName)!
                </div>
                <div class="btn btn-danger">@Html.RouteLink("Выход", new { action = "Logout", controller = "Account" })</div>
            </div>
        }
        else
        {
            @Html.Partial("_LoginPanel", new LoginModel())
        }
    </div>
</nav>  

@RenderBody()
</body>
</html>